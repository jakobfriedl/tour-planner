<UserControl x:Class="TourPlanner.Views.MenuStrip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TourPlanner.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Menu Name="MainMenu" VerticalAlignment="Top">
            <MenuItem Header="_Options">
                <MenuItem Command="{Binding OpenSettingsCommand}" Header="_Config"></MenuItem>
                <MenuItem Header="_Export"></MenuItem>
                <MenuItem Header="_Import"></MenuItem>
                <MenuItem Command="{Binding TourReportCommand}" Header="_Tour Report"></MenuItem>
                <MenuItem Command="{Binding SummarizeReportCommand}" Header="_Summarize Report"></MenuItem>
            </MenuItem>
            <MenuItem HorizontalAlignment="Right" Header="_Help"></MenuItem>
        </Menu>
    </Grid>
</UserControl>
