<Window x:Class="TourPlanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TourPlanner"
        mc:Ignorable="d"
        Title="Tour Planner" Height="600" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0" Name="MainMenu"  VerticalAlignment="Top">
            <MenuItem Header="_Options">
                <MenuItem Name="OptionsConfig" Header="_Config"></MenuItem>
                <MenuItem Name="OptionsExport" Header="_Export"></MenuItem>
                <MenuItem Name="OptionsImport" Header="_Import"></MenuItem>
                <MenuItem Name="OptionsTourReport" Header="_Tour Report"></MenuItem>
                <MenuItem Name="OptionsSummarizeReport" Header="_Summarize Report"></MenuItem>
            </MenuItem>
            <MenuItem HorizontalAlignment="Right" Header="_Help"></MenuItem>
        </Menu>

        <Grid Grid.Row="1" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0" Name="SearchTextBox" Width="400" VerticalContentAlignment="Center"></TextBox>
            <Button Grid.Column="1" Name="SearchButton" Width="50">Search</Button>
        </Grid>

        <Grid Grid.Row="2" ShowGridLines="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30*"></ColumnDefinition>
                <ColumnDefinition Width="70*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <ListView Grid.Row="0"  Grid.Column="0" BorderBrush="DimGray">
                <Label>Tours</Label>
            </ListView>

            <TabControl Grid.Row="0" Grid.Column="1" BorderBrush="DimGray">
                <TabItem Header="Route">
                    <Label>Route</Label>
                </TabItem>
                <TabItem Header="Information">
                    <Label>Information</Label>
                </TabItem>
            </TabControl>

            <ListView Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" BorderBrush="DimGray">
                <Label>Logs</Label>
            </ListView>
        </Grid>

    </Grid>
</Window>
